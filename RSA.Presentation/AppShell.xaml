<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RSA.Presentation.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RSA.Presentation"
    xmlns:pages="clr-namespace:RSA.Presentation.Pages"
    Title="RSA.Presentation"
    Shell.BackgroundColor="#000044">


    <Shell.FlyoutHeader>
        <Grid>
            <Label Text="Bem-vindo!" FontSize="24"/>
        </Grid>
    </Shell.FlyoutHeader>
    

    <FlyoutItem Title="Home" Icon="menuicon.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Setings">
        <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="help">
        <ShellContent ContentTemplate="{DataTemplate pages:HelpPage}" />
    </FlyoutItem>

    <FlyoutItem Title="About">
        <ShellContent ContentTemplate="{DataTemplate pages:AboutPage}" />
    </FlyoutItem>

    <MenuItem Text="Isso é um botão"/>

    <FlyoutItem Title="Dashboard">
        <Tab>
            <ShellContent Title="Resumo" ContentTemplate="{DataTemplate local:MainPage}" />
            <ShellContent Title="Relatórios" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <Label Text="Versão 1.0"/>
    </Shell.FlyoutFooter>



</Shell>
